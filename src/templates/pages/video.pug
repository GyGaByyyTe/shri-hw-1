extends ../template

block variables
    - var title = 'Яндекс Дом - Видео'

block content
    .wrapper#wrapper
        .content#content
            header.header.container
                .header__left
                    a(href="#").logo
                .header__right
                    .hamburger                
                        a(href="#").hamburger__link Меню
                            .hamburger__line    
                    nav.menu
                        ul.menu__list
                            li.menu__item
                                a(href="/index.html").menu__link Сводка
                            li.menu__item 
                                a(href="#").menu__link Устройства
                            li.menu__item 
                                a(href="#").menu__link Сценарии
                            li.menu__item.menu__item--active 
                                a(href="/video.html").menu__link Видео

            section.multimedia
                h1.multimedia__header Видео-каналы
                ul.multimedia__list
                    div(class="multimedia__video-frame")
                        video(id="video1" class="multimedia__video" controls mute autoplay)
                    div(class="multimedia__video-frame")
                        video(id="video2" class="multimedia__video" controls mute)
                    div(class="multimedia__video-frame")
                        video(id="video3" class="multimedia__video" controls mute)
                    div(class="multimedia__video-frame")
                        video(id="video4" class="multimedia__video" controls mute)

        footer.footer
            ul.footer__list
                li.footer__item
                    a(href="#").footer__link Помощь
                li.footer__item
                    a(href="#").footer__link Обратная связь
                li.footer__item                
                    a(href="#").footer__link Разработчикам
                li.footer__item
                    a(target="_blank" rel="nofollow noopener" href="https://gygabyyyte.github.io/shri-hw-1/license.pdf").footer__link Условия использования
            .footer__copyright &copy; 2001-2018 OOO "Яндекс"                                  

    script(src="//cdn.jsdelivr.net/npm/hls.js@latest" defer)
    script(src='./video.js' defer)